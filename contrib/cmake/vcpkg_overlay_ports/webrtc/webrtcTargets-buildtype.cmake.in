
set_property(TARGET @cmake_target_name@ APPEND PROPERTY IMPORTED_CONFIGURATIONS "@cmake_build_type@")

string(TOUPPER "@cmake_build_type@" cmake_build_type_upper)

foreach(library IN ITEMS @cmake_target_name@ @cmake_target_name_extra@)

    find_library(_LIB_PATH REQUIRED
        NAMES ${library}
        NO_DEFAULT_PATH
        HINTS "${_IMPORTED_PREFIX}/@cmake_install_dir@"
    )

    list(APPEND LIBS_LIST "${_LIB_PATH}")

    unset(_LIB_PATH CACHE)

endforeach()

if(LIBS_LIST)
    message(STATUS "WebRTC found (${cmake_build_type_upper}): ${LIBS_LIST}")
endif()

set_target_properties(@cmake_target_name@ PROPERTIES
    IMPORTED_LOCATION_${cmake_build_type_upper} "${LIBS_LIST}"
)

unset(LIBS_LIST)
