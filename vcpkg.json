{
    "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",
    "name": "chatlib",
    "homepage": "https://github.com/meganz/megachat",
    "features": {
        "use-webrtc": {
            "description": "Enable support for voice and/or video calls",
            "dependencies": [
                "webrtc",
                {
                    "name": "libwebsockets",
                    "default-features": false,
                    "features": [
                        "boringssl"
                    ]
                },
                {
                    "name": "curl",
                    "default-features": false,
                    "features": [
                        "zstd"
                    ]
                },
                {
                    "name": "curl",
                    "default-features": false,
                    "features": [
                        "boringssl"
                    ],
                    "platform": "!ios"
                }
            ]
        },
        "no-webrtc": {
            "description": "Disable support for voice and/or video calls",
            "dependencies": [
                "libwebsockets",
                {
                    "name": "curl",
                    "features": [ "zstd" ]
                }
            ]
        },
        "use-openssl": {
            "description": "OpenSSL library",
            "dependencies": [
                "openssl"
            ]
        },
        "use-mediainfo": {
            "description": "MediaInfo library",
            "dependencies": [
                {
                    "name": "libmediainfo",
                    "default-features": false
                }
            ]
        },
        "use-freeimage": {
            "description": "FreeImage library",
            "dependencies": [
                "freeimage",
                {
                    "name": "jasper",
                    "default-features": false
                }
            ]
        },
        "use-ffmpeg": {
            "description": "FFMpeg library",
            "dependencies": [
                {
                    "name": "ffmpeg",
                    "default-features": false,
                    "features": [
                        "avcodec",
                        "avformat",
                        "swresample",
                        "swscale"
                    ]
                }
            ]
        },
        "use-libuv": {
            "description": "libuv library",
            "dependencies": [
                "libuv"
            ]
        },
        "use-pdfium": {
            "description": "pdfium library",
            "dependencies": [
                "pdfium"
            ]
        },
        "use-readline": {
            "description": "Readline library",
            "dependencies": [
                "readline"
            ]
        },
        "chat-tests": {
            "description": "gtests library for the integration and unit tests",
            "dependencies": [
                "gtest"
            ]
        },
        "megaclc-example": {
            "description": "gtests library for the integration and unit tests",
            "dependencies": [
                "boost-program-options"
            ]
        }
    },
    "dependencies": [
        "cryptopp",
        "icu",
        "libsodium",
        "sqlite3"
    ],
    "builtin-baseline": "ef7dbf94b9198bc58f45951adcf1f041fcbc5ea0",
    "overrides": [
        {
            "name": "icu",
            "version": "74.2#4"
        },
        {
            "name": "libuv",
            "version": "1.49.2"
        }
    ]
}
