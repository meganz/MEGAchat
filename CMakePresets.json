{
    "version": 1,
    "configurePresets": [
        {
            "name": "default",
            "hidden": true,
            "binaryDir": "${sourceParentDir}/build-${sourceDirName}-${presetName}",
            "cacheVariables": {
                "VCPKG_ROOT": "${sourceParentDir}/vcpkg"
            }
        },
        {
            "name": "unix",
            "hidden": true,
            "generator": "Unix Makefiles"
        },
        {
            "name": "windows",
            "hidden": true,
            "generator": "Visual Studio 17 2022"
        },
        {
            "name": "android",
            "hidden": true,
            "inherits": "unix",
            "cacheVariables": {
                "CMAKE_SYSTEM_NAME": "Android"
            }
        },
        {
            "name": "ios",
            "hidden": true,
            "inherits": "unix",
            "cacheVariables": {
                "CMAKE_SYSTEM_NAME": "iOS"
            }
        },
        {
            "name": "dev",
            "hidden": true,
            "inherits": "default",
            "cacheVariables": {
                "ENABLE_CHATLIB_MEGACLC": "ON",
                "ENABLE_CHATLIB_QTAPP": "ON",
                "ENABLE_CHATLIB_TESTS": "ON",
                "ENABLE_CHATLIB_WERROR": "ON",
                "ENABLE_JAVA_BINDINGS": "ON",
                "ENABLE_QT_BINDINGS": "ON"
            }
        },
        {
            "name": "mega",
            "hidden": true,
            "inherits": "default",
            "cacheVariables": {
                "ENABLE_CHATLIB_MEGACLC": "OFF",
                "ENABLE_CHATLIB_TESTS": "OFF",
                "ENABLE_CHATLIB_WERROR": "OFF",
                "ENABLE_QT_BINDINGS": "OFF"
            }
        },
        {
            "name": "dev-unix",
            "inherits": [
                "unix",
                "dev"
            ]
        },
        {
            "name": "dev-windows",
            "inherits": [
                "windows",
                "dev"
            ]
        },
        {
            "name": "mega-android",
            "inherits": [
                "android",
                "mega"
            ],
            "cacheVariables": {
                "ENABLE_JAVA_BINDINGS ": "ON"
            }
        },
        {
            "name": "mega-ios",
            "inherits": [
                "ios",
                "mega"
            ]
        }
    ]
}
