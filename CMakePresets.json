{
    "version": 2,
    "configurePresets": [
        {
            "name": "default",
            "hidden": true,
            "binaryDir": "${sourceParentDir}/build-${sourceDirName}-${presetName}",
            "cacheVariables": {
                "VCPKG_ROOT": "${sourceParentDir}/vcpkg"
            }
        },
        {
            "name": "unix",
            "hidden": true,
            "generator": "Unix Makefiles"
        },
        {
            "name": "windows",
            "hidden": true,
            "generator": "Visual Studio 17 2022"
        },
        {
            "name": "android",
            "hidden": true,
            "inherits": "unix",
            "cacheVariables": {
                "CMAKE_SYSTEM_NAME": "Android"
            }
        },
        {
            "name": "ios",
            "hidden": true,
            "inherits": "unix",
            "cacheVariables": {
                "CMAKE_SYSTEM_NAME": "iOS"
            }
        },
        {
            "name": "dev",
            "hidden": true,
            "inherits": "default",
            "cacheVariables": {
                "ENABLE_CHATLIB_MEGACLC": "ON",
                "ENABLE_CHATLIB_QTAPP": "ON",
                "ENABLE_CHATLIB_TESTS": "ON",
                "ENABLE_CHATLIB_WERROR": "ON",
                "ENABLE_JAVA_BINDINGS": "ON",
                "ENABLE_MEDIA_FILE_METADATA" : "ON",
                "ENABLE_QT_BINDINGS": "ON"
            }
        },
        {
            "name": "mega",
            "hidden": true,
            "inherits": "default",
            "cacheVariables": {
                "ENABLE_MEDIA_FILE_METADATA" : "ON"
            }
        },
        {
            "name": "dev-unix",
            "inherits": [
                "dev",
                "unix"
            ]
        },
        {
            "name": "dev-windows",
            "inherits": [
                "dev",
                "windows"
            ]
        },
        {
            "name": "mega-android",
            "inherits": [
                "mega",
                "android"
            ],
            "cacheVariables": {
                "ENABLE_JAVA_BINDINGS": "ON"
            }
        },
        {
            "name": "mega-ios",
            "inherits": [
                "mega",
                "ios"
            ]
        }
    ]
}
